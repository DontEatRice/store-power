<%- include('../../fragments/header.ejs') %>
    <main>
        <h2><%= __('store.list.pageTitle') %></h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th><%= __('store.fields.name') %></th>
                    <th><%= __('store.fields.city') %></th>
                    <th><%= __('store.fields.street') %></th>
                    <th><%= __('list-page.actions.title') %></th>
                </tr>
            </thead>
            <tbody>
                <% for (const store of stores) { %>
                <tr>
                    <td><%= store.name %></td>
                    <td><%= store.city %></td>
                    <td><%= store.street %></td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="<%= navLocation %>/details/<%=store.id%>" class="list-actions-button-details material-symbols-outlined">info</a></li>
                            <li><a href="<%= navLocation %>/edit/<%=store.id%>" class="list-actions-button-edit material-symbols-outlined">edit</a></li>
                            <li><a href="<%= navLocation %>/delete/<%=store.id%>" class="list-actions-button-delete material-symbols-outlined">delete</a></li>
                        </ul>
                    </td>
                </tr>
                <% } %>                  
            </tbody>
        </table>
        <p><a href="<%= navLocation %>/add" class="button-add"><%= __('store.list.addNew') %></a></p>
    </main>
    <%- include('../../fragments/footer.ejs') %>